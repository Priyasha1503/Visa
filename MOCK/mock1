def func(s):
    if len(s)<2:
        if s[0]!=s[1]:
            return s
        else:
            return ""
    stack.append(s[0])
    stack.append(s[1])
    for i in range(2,len(s)):
        
        if stack!=[]:
            if s[i]==stack[-1]:
                stack.pop()
            else:
                
                stack.append(s[i])
        else:
            stack.append(s[i])
    return "".join(stack)

print(func(s))

            
                
            
        
        
Q4
scores=[]
n=int(input())
for i in range(0,n):
    x=int(input())
    y=int(input())
    scores.append([x,y])

print(scores)
ind=0
res=[]
d=dict()
for i,j in scores:
    d[ind]=i+j
    ind+=1
print(d)
res=list(d)
#print(res)
res.sort(reverse=True)
print(res)

    

